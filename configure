#!/bin/sh
## borrowed from https://github.com/sodium-friends/sodium-native/blob/master/configure
PREFIX="${PREFIX:-$PWD}"
KONAN="${KONAN:-$HOME/.konan}"
ARCH=${ARCH:-$(uname -m)}

cd libsodium

! [ -f autogen.sh ] && echo 'You need to run "npm run fetch-libsodium" first' && exit 1
./autogen.sh

if [ -z "$SYSROOT" ]; then
  case $(uname -a) in
    **Linux*x86_64**)
      GCC=${GCC:-gcc}
      GCC=gcc
      ;;

    **Darwin*x86_64**)
      GCC=${GCC:-clang}
      ;;
  esac

  export CC=$(find $KONAN/dependencies -wholename *${ARCH/_/-}/bin/*$GCC | head -n1)
fi

./configure --prefix=$PREFIX "$@"
make install
